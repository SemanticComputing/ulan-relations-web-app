{
    "id": "consolidated",
    "endpoint": {
        "url": "http://vocab.getty.edu/sparql.json",
        "useAuth": true,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesPerspectives.js",
    "baseURI": "http://ldf.fi/mmm",
    "URITemplate": "<BASE_URI>/work/<LOCAL_ID>",
    "facetClass": "rel:combinedRelation",
    "frontPageImage": "main_page/combined.png",
    "searchMode": "faceted-search",
    "defaultActiveFacets": [
        "prefLabel"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "resultClasses": {
        "consolidated": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "consolidatedProperties",
                "pagesize": 25,
                "sortBy": null,
                "sortDirection": null
            },
            "instanceConfig": {
                "propertiesQueryBlock": "consolidatedProperties",
                "instancePageResultClasses": {
                    "instancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    },
                    "instancePageExport": {
                        "tabID": 1,
                        "component": "Export",
                        "tabPath": "export",
                        "tabIcon": "CloudDownload",
                        "pageType": "instancePage"
                    }
                }
            }
        }
    },
    "properties": [
        {
            "id": "uri",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "onlyOnInstancePage": true
        },
        {
            "id": "prefLabel",
            "valueType": "object",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 250
        },
        {
            "id": "connectedPerson",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 250
        },
        {
            "id": "connectingPerson",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 250
        }

    ],
    "facets": {
        "relationType": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "predicate": "rel:relationType",
            "facetLabelPredicate": "rdfs:label",
            "searchField": true,
            "sortButton": true,
            "pieChartButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "rel:relationType/rdfs:label",
            "sortDirection": "desc"
        },
        "personName": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "hideUnknownValue": true,
            "facetLabelPredicate": "rdfs:label",
            "predicate": "rel:connectedEntity",
            "searchField": true,
            "sortButton": true,
            "pieChartButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "rel:connectedEntity/rdfs:label",
            "sortDirection": "desc"
        },
        "personGender": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "predicate": "rel:connectedEntity/schema:gender",
            "facetLabelPredicate": "rdfs:label",
            "searchField": true,
            "sortButton": true,
            "pieChartButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "rel:connectedEntity/schema:gender/rdfs:label",
            "sortDirection": "desc"
        },
        "personNationality": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "literal": true,
            "predicate": "rel:connectedEntity/schema:nationality",
            "searchField": true,
            "sortButton": true,
            "pieChartButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "rel:connectedEntity/schema:nationality",
            "sortDirection": "desc"
        },
        "personBirthYear": {
            "containerClass": "five",
            "facetType": "integer",
            "filterType": "integerFilterRange",
            "predicate": "rel:connectedEntity/schema:birthDate",
            "sortByPredicate": "rel:connectedEntity/schema:birthDate",
            "typecasting": "BIND(xsd:integer(?value) as ?valueAsInteger)",
            "unit": "year"
        }
    }
}